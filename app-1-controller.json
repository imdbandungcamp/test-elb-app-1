{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
       "name":"app-1",
       "labels":{
          "app":"app-1"
       }
    },
    "spec":{
       "replicas":3,
       "selector":{
          "app":"app-1"
       },
       "template":{
          "metadata":{
             "labels":{
                "app":"app-1"
             }
          },
          "spec":{
             "containers":[
                {
                   "name":"app-1",
                   "image":"400856814742.dkr.ecr.us-east-2.amazonaws.com/app1:app1",
                   "ports":[
                      {
                         "name":"http-server",
                         "containerPort":8080
                      }
                   ]
                }
             ]
          }
       }
    }
 }